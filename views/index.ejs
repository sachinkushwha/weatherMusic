<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WeatherPulse</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Outfit', sans-serif;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-[#0f2027] via-[#203a43] to-[#2c5364] min-h-screen flex items-center justify-center p-3">

  <div
    class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-3 w-full max-w-[240px] mx-auto text-white shadow-xl">

    <!-- Header -->
    <div class="text-center mb-3">
      <h1 class="text-xl font-bold">🌍 WeatherPulse</h1>
      <p class="text-gray-300 text-xs mt-1">Real-Time Weather</p>
    </div>

    <!-- Search -->
    <form action="/" method="post">
      <div class="flex flex-col bg-white/20 border border-white/30 rounded-lg overflow-hidden mb-3">
        <input type="text" name="city" placeholder="Enter city..."
          class="px-3 py-2 text-sm bg-transparent text-white placeholder-gray-300 focus:outline-none" />
        <button type="submit"
          class="bg-yellow-400 text-black text-sm font-semibold px-4 py-2 hover:bg-yellow-500 transition">
          Search
        </button>
      </div>
    </form>

    <!-- Weather Info -->
    <div class="text-center mb-3">
      <h2 class="text-base font-semibold">📍 <%=city%></h2>
      <p class="text-3xl font-bold mt-1">🌤 <%=main.temp%>°C</p>
      <p class="text-xs text-gray-300 mt-1"><%=mosum%></p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-1 text-[10px] text-center">
      <div class="bg-white/10 rounded-lg p-2">
        <div class="text-lg">💧</div>
        <div>Humidity</div>
        <div class="font-bold"><%=main.humidity%>%</div>
      </div>
      <div class="bg-white/10 rounded-lg p-2">
        <div class="text-lg">🌬️</div>
        <div>Wind</div>
        <div class="font-bold"><%=wind*3.6%> km/h</div>
      </div>
      <div class="bg-white/10 rounded-lg p-2">
        <div class="text-lg">📈</div>
        <div>Pressure</div>
        <div class="font-bold"><%=main.pressure%> hPa</div>
      </div>
    </div>

  </div>

</body>

</html>
